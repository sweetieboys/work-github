<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">

            <a class="navbar-brand" href="/">
               <span>LOGO</span>
            </a>
              <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>


              <div class="collapse navbar-collapse" id="navbarNavDropdown">


                <ul class="navbar-nav ml-auto">
               <% if customer_signed_in? %>
               <li class="mr-5 nav-link text-light">ようこそ、<%= current_customer.last_name %>さん！</li>
                       <li class="ml-5">
                         <%= link_to customers_show_path, class:"nav-link text-light" do %>
                           <i class="fa-solid fa-house"></i> マイページ
                         <% end %>
                       </li>
                       <li >
                         <%= link_to items_path, class:"nav-link text-light" do %>
                           <i class="fa-solid fa-book-open"></i> 商品一覧
                         <% end %>
                       </li>
                       <li>
                         <%= link_to cart_items_path, class:"nav-link text-light" do %>
                           <i class="fa-solid fa-book-open"></i> カート
                         <% end %>
                       </li>
                       <li>
                         <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link text-light" do %>
                           <i class="fa-solid fa-sign-out-alt"></i> ログアウト
                         <% end %>

                       </li>
                       <p id="notice"><%= notice %></p>
                      <div class="d-flex justify-content-center mb-2">
                        <%= form_with url: item_search_path, method: :get, local: true do |f| %>
                            <%= f.text_field :name %>
                            <%= f.submit :search %>
                        <% end %>
                      </div>
                     <% elsif admin_signed_in? %>
                               <li>
                                 <%= link_to admin_items_path, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-link"></i> 商品一覧
                                 <% end %>
                               </li>
                               <li>
                                 <%= link_to admin_customers_path, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-link"></i> 会員一覧
                                 <% end %>
                               </li>
                               <li>
                                 <%= link_to admin_path, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-link"></i> 注文履歴一覧
                                 <% end %>
                               </li>
                               <li>
                                 <%= link_to admin_genres_path, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-link"></i> ジャンル一覧
                                 <% end %>
                               </li>
                               <li>
                                 <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-sign-out-alt"></i> ログアウト
                                 <% end %>
                               </li>
                                     <p id="notice"><%= notice %></p>
                                  <div class="d-flex justify-content-center mb-2">
                                    <%= form_with url:  admin_item_search_path, method: :get, local: true do |f| %>
                                        <%= f.text_field :name %>
                                        <%= f.submit :search %>
                                    <% end %>
                                  </div>

                             <% else %>
                                   <li>
                                     <%= link_to about_path, class:"nav-link text-light" do %>
                                       <i class="fa-solid fa-link"></i> About
                                     <% end %>
                                   </li>
                                   <li>
                                     <%= link_to items_path, class:"nav-link text-light" do %>
                                       <i class="fa-solid fa-book-open"></i> 商品一覧
                                     <% end %>
                                   </li>
                                   <li>
                                     <%= link_to new_customer_registration_path, class:"nav-link text-light" do %>
                                       <i class="fa-solid fa-user-plus"></i> 新規登録
                                     <% end %>
                                   </li>
                                   <li>
                                     <%= link_to new_customer_session_path, class:"nav-link text-light" do %>
                                       <i class="fa-solid fa-sign-in-alt"></i> ログイン
                                     <% end %>
                                   </li>
                              <% end %>
                </ul>
              </div>
          </div>
      </nav>
    </header>
    <%= yield %>
    <footer>

    </footer>
  </body>
</html>
