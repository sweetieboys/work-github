<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <a class="navbar-brand" href="/">
               <span>LOGO</span>
            </a>
              <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>


              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
               <% if customer_signed_in? %>
                       <li>
                         <%= link_to customers_show_path, class:"nav-link text-light" do %>
                           <i class="fa-solid fa-house"></i> mypage
                         <% end %>
                       </li>
                       <li>
                         <%= link_to items_path, class:"nav-link text-light" do %>
                           <i class="fa-solid fa-book-open"></i> Items
                         <% end %>
                       </li>
                       <li>
                         <%= link_to cart_items_path, class:"nav-link text-light" do %>
                           <i class="fa-solid fa-book-open"></i> Cart
                         <% end %>
                       </li>
                       <li>
                         <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link text-light" do %>
                           <i class="fa-solid fa-sign-out-alt"></i> Log out
                         <% end %>
                       </li>

                     <% elsif admin_signed_in? %>
                               <li>
                                 <%= link_to admin_items_path, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-link"></i> Items
                                 <% end %>
                               </li>
                               <li>
                                 <%= link_to admin_customers_path, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-link"></i> Customers
                                 <% end %>
                               </li>
                               <li>
                                 <%= link_to orders_path, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-link"></i> Orders
                                 <% end %>
                               </li>
                               <li>
                                 <%= link_to admin_genres_path, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-link"></i> Genres
                                 <% end %>
                               </li>
                               <li>
                                 <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do %>
                                   <i class="fa-solid fa-sign-out-alt"></i> Log out
                                 <% end %>
                               </li>

                             <% else %>
                                   <li>
                                     <%= link_to about_path, class:"nav-link text-light" do %>
                                       <i class="fa-solid fa-link"></i> About
                                     <% end %>
                                   </li>
                                   <li>
                                     <%= link_to items_path, class:"nav-link text-light" do %>
                                       <i class="fa-solid fa-book-open"></i> Items
                                     <% end %>
                                   </li>
                                   <li>
                                     <%= link_to new_customer_registration_path, class:"nav-link text-light" do %>
                                       <i class="fa-solid fa-user-plus"></i> Sign up
                                     <% end %>
                                   </li>
                                   <li>
                                     <%= link_to new_customer_session_path, class:"nav-link text-light" do %>
                                       <i class="fa-solid fa-sign-in-alt"></i> Log in
                                     <% end %>
                                   </li>
                              <% end %>
                </ul>
              </div>
          </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
