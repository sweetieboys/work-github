<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-3">配送先編集</h4>
      <table>
      <%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, size: 40 %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "変更内容を保存", class:"btn btn-success" %></td>
      </tr>
      <%end%>
      </table>
    </div>
  </div>
</div>
