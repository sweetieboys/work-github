<div class="container">
  <div class="row-2"></div>
  <div class="row">
        <div class='col-2'>
        <div class="border">
        <span class="border">
          <p>ジャンル検索</p>
        </span>
        </div>
        <div class="border2">
        <span class="border">
          <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <ul>
                <li><%= link_to genre.name, items_path(genre_id: genre.id), class: "text-secondary" %></li>
              </ul>
            </td>
          </tr>
          <% end %>
          </tbody>
        </span>
        </div>
        </div>
       <div class="col-md-4">
      <div style="padding-left:20%;">
        <%= image_tag @item.get_image(300,200) %>
      </div>
    </div>
    <div class="col-md-6">
      <h3 class="my-4"><span style="margin-left:150px;"><%= @item.name %></span></h3>
      <p class="my-4"><span style="margin-left:135px;"><%= @item.introduction %></span></p>
      <p class="my-4"><span style="margin-left:40px;"><%= number_with_delimiter((@item.price * 1.1).round) %>円 </span></p>
      <%= form_with model: @cart_item,url:cart_items_path do |f| %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <p><%= f.select :amount, *[1..10] %></p>
      <p><%= f.submit 'カートに入れる', class: 'btn btn-success' %></p>
      <% end %>
    </div>
  </div>
</div>