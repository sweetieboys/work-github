<div class="container">
  <div class="row">
    <h3>ショッピングカート</h3>
    <%= link_to "カートを空にする", cart_items_destroy_all_path ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%>
  </div>
  <div class="row"></div>
  <div class="row">
   <div class="col-1" >
    </div>
    <div class="col-10">
      <table class="table table-bordered">
            <tr class="table-active">
               <th>商品名</th>
               <th>単価(税込み)</th>
               <th>数量</th>
               <th>小計</th>
               <!--タグの中にbrタグを入れることで空白のセルを作れる-->
               <th><br></th>
            </tr>
             <% @sum = 0 %>
             <% @cart_item.each do |cart_item| %>
               <tr>
                  <td>
                     <%= image_tag cart_item.item.get_image(100,70) %>
                     <%= cart_item.item.name %>
                  </td>
                  <td><%= (cart_item.item.price*1.1).floor %></td>
                  <td>
                     <%= form_with model:cart_item, url:cart_item_path(cart_item.id) , local:true do |f| %>
                        <%= f.select :amount, *[1..10] %>
                        <%= f.submit "変更" , class: "btn btn-success" %>
                     <% end %>
                  </td>
                  <td><%= cart_item.subtotal %></td>
                  <td><%= link_to "削除", cart_item_path(cart_item) ,method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></td>
               </tr>
               <% @sum += cart_item.subtotal %>
          <% end %>
        </table>
      <%= link_to "買い物を続ける" , root_path , class: "btn btn-primary" %>
      合計金額 <%= @sum %>

      <% unless @cart_item.empty? %>
        <%= link_to "情報入力に進む" , new_order_path , class: "btn btn-success" %>
        <div class="col-1"></div>
      <% end %>
  </div>
</div>