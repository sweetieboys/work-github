<div class="container">
  <div class="row">
    <h3>商品新規登録</h3>
  </div>
  <div class="row">
   <div class="col-3" >
    </div>
    <div class="col-6">
        <table>
          <tbody>
            <%= form_with model:@item,url:admin_items_path do |f| %>
              <tr>
              　<td>商品画像</td>
              　<td>
              　  <%= f.file_field :image, accept: "image/*" %>
              　</td>
              </tr>
              <tr>
              　<td>商品名</td>
              　<td>
              　  <%= f.text_field :name, rows:'3', placeholder: "商品名" %>
              　</td>
              </tr>
              <tr>
              　<td>商品説明</td>
              　<td>
              　    <%= f.text_area :introduction, rows:'6', placeholder: "商品説明"  %>
              　</td>
              </tr>
              <tr>
                <td>ジャンル</td>
            　　<td>
            　　     <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'form-control'} %>
            　　</td>
              </tr>
              <tr>
                <td>税抜価格</td>
                <td>
                  <%= f.number_field :price, rows:'3', placeholder: "1000" %>
                </td>
              </tr>
              <tr>
                <td>販売ステータス</td>
                <td>
                  <p><%= f.radio_button :is_active, :true %>販売中</p>
                  <p><%= f.radio_button :is_active, :false %>販売停止中</p>
                </td>
              </tr>
              <tr>
                <td>
                <%= f.submit '新規登録',class: "btn btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <div class="col-3"></div>
  </div>
