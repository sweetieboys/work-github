<h1>商品新規登録</h1>
  <table>
    <tbody>
      <%= form_with model: @item do |f| %>
        <tr>
        　<td>商品画像</td>
        　<td></td>
        </tr>
        <tr>
        　<td>商品名</td>
        　<td>
        　  <%= f.text_field :name, rows: '3', placeholder: "商品名" %>
        　</td>
        </tr>
        <tr>
        　<td>商品説明</td>
        　<td>
        　    <%= f.text_area :introduction, rows:'6', placeholder: "商品説明"  %>
        　</td>
        </tr>
    </tbody>
  </table>
