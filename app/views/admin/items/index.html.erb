<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品一覧</h2>
    </div>
    <!--商品新規登録ボタン-->
    <div class="col text-right m-3">
      <%= link_to "+", new_admin_item_path, class:"btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
            <td><span style="color:green;"><%= item.is_active? ? '販売中' : '販売停止中' %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
