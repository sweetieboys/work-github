
<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="m-3">会員一覧</h4>
        <table class="table table-hover">
          <thead>
            <tr class="table-secondary">
              <th>会員ID</th>
              <th>氏名</ht>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><%= customer.customer_status %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
<!--ページネーション-->
<div class="container">
  <%= paginate @customers %>
</div>
