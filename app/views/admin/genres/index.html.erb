<div class="container">
  <dev class="row">
    <dev class="col">
      <h4>ジャンル一覧・追加</h4>
      <%= form_with model:@genre, url: admin_genres_path do |f| %>
      <td>ジャンル名</td>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
      <%end%>
    </dev>
  </dev>
</div>

<div class="container">
  <dev class="row">
    <div class="col">
      <table>
        <tr>
          <th>ジャンル</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
        </tr>
        <%end%>
      </table>
    </div>
  </dev>
</div>
